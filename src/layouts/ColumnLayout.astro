---

import { ViewTransitions } from 'astro:transitions';
import Detail from '../components/DetailNote.astro';
import Highlight from '../components/HighlightNote.astro';
import HomeIcon from '../components/icons/HomeIcon.astro';
import Icon from '../components/Icon.astro';
import MenuIcon from '../components/icons/MenuIcon.astro';
import Nav from '../components/nav/SiteNav.astro';

interface Props {
    title: string;
    iconName:  string;
}

const { title, iconName } = Astro.props;
---

<!doctype html>
<html>
    <head>
        <meta charset="UTF-8"/>
        <meta name="viewport" content="width=device-width"/>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Nanum+Pen+Script&family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Permanent+Marker&display=swap" rel="stylesheet">
        <title>{title}</title>
        <ViewTransitions/>
    </head>
    <body>
        <div class="minimized">
            <MenuIcon transition:name='icon' prevURL={Astro.url.href}/>
        </div>
        <div id="bar1" transition:animate="fade">
            <slot name="column1"/>
        </div>
        <div id="bar2" transition:animate="fade">
            <slot name="column2"/>
        </div>
        <div class="sidebar" transition:animate="none">
            <Highlight message="grand opening!"/>
            <Icon iconName={iconName}/>
            <Nav/>
            <HomeIcon inMenu={false}/>
            <Detail message="open 7 days a week // 250.763.2988"/>
        </div>
    </body>
</html>
<style>
    .minimized {
        display: none;
        height: 0px;
        width: 0px;
    }
    body {
        display: flex;
        flex-wrap: wrap;
        height: 100vh;
    }
    #bar1 {
        width: 35%;
        height: 100vh;
    }
    #bar2 {
        width: 35%;
        height: 100vh;
    }
    .sidebar {
        position: fixed;
        top: 0;
        right: 0;
        height: 100vh;
        width: 30%;
        min-width: 300px;
        max-width: 400px;
        background-color: #fff2d1;
    }
    /* hamburger time :) */
    @media(max-width: 900px) {
        .sidebar {
            display: none;
            width: 0px;
            height: 0px;
        }
        #bar1 {
            width: 100%;
            height: 50%;
        }
        #bar2 {
            width: 100%;
            height: 50%;
        }
        .minimized {
            display: block; /* re-enable display */
        }
    }
</style>