---

import Highlight from '../components/Highlight.astro';
import Nav from '../components/Nav.astro';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html>
    <head>
        <meta charset="UTF-8"/>
        <meta name="viewport" content="width=device-width"/>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Nanum+Pen+Script&family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Permanent+Marker&display=swap" rel="stylesheet">
        <title>{title}</title>
    </head>
    <body>
        <div class="main-content">
            <slot/>
        </div>
        <div class="sidebar">
            <Highlight message="est 2024!"/>
            <Nav/>
        </div>
    </body>
</html>
<style>
    body {
        display: grid;
        grid-template-columns: 60% 40%;
    }
    .main-content {
        grid-column-start: 1;
        margin: 0px;
        border: 1px solid red;
    }
    .sidebar {
        grid-column-start: 2;
        margin: 0px;
        border: 1px solid blue;
    }
</style>