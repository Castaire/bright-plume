---

interface Props {
    message: string
}

const {message} = Astro.props;

---

<div class="footer-note">
    <p>{message}</p>
</div>

<style>
    .footer-note {
        position: absolute;
        right: 0px;
        bottom: 50px;
        width: 100%;
        height: 97px;
        border-top: 10px solid white;
        border-bottom: 10px solid white;
        background-color: #C7C7A6;
        text-align: center;
        opacity: 80%;
    }

    .footer-note p {
        display: block;
        position: relative;
        top: 50%;
        -ms-transform: translate(-50%);
        transform: translateY(-50%);
        margin: auto 10px;
        font-family: "Nanum Pen Script", cursive;
        font-size: 20px;
        letter-spacing: 2.5px;
        font-style: normal;
    }
</style>