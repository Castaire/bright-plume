---

interface Props {
    company:    string;
    street:     string;
    area:       string;
    postalCode: string;
    hours:      string;
    phone1:     string;
    phone2:     string;
    mapDirUrl:  string;
}

const {company, street, area, postalCode, hours, phone1, phone2, mapDirUrl} = Astro.props;
---

<p class="title-text btm-margin-20">{company}</p>
    <p class="common-text btm-margin-20">
        {street}<br>{area}<br>{postalCode}
    </p>
    <p class="common-text inline label btm-margin-10">
        EVERY DAY
    </p>
    <p class="common-text inline btm-margin-10">{hours}</p>
    <div class="btm-margin-10">
        <a href={mapDirUrl} class="common-text label">
            <u>GET DIRECTIONS</u>
        </a>
    </div>
    <p class="common-text">{phone1} &nbsp;/&nbsp; {phone2}</p>

<style>
    .title-text {
        font-family: "Permanent Marker";
        font-weight: 400;
        font-size: 18px;
    }
    .common-text {
        font-family: "Noto Sans";
        font-weight: 300;
        font-style: normal;
        font-size: 16px;
        line-height: 25px;
        letter-spacing: 0.06em;
    }
    .inline {
        display: inline-block;
    }
    .label {
        color: #939393;
        margin-right: 15px;
    }
    .btm-margin-10 {
        margin-bottom: 10px;
    }
    .btm-margin-20 {
        margin-bottom: 20px;
    }
</style>