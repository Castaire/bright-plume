---

import { Image } from "astro:assets";
import chefIcon from "../assets/chef.svg"

---

<div class="icon">
    <div class="icon-background"/>
    <Image src={chefIcon} alt="A minimalistic chef icon"/>
</div>

<style>
    .icon {
        margin: 30px auto;
        position: relative;
        width: 78px;
        height: 78px;
    }
    .icon-background {
        position: absolute;
        top: 0;
        left: 0;
        width: inherit;
        height: inherit;
        border-radius: 10px;
        background-color: #95B58F;
        opacity: 50%;
        filter: drop-shadow(5px -5px 4px rgba(0, 0, 0, 0.7));
        z-index: 0;
    }
    img {
        position: relative;
        top: 14px;
        left: 14px;
        width: 50px;
        height: 50px;
        z-index: 1;
    }
</style>

