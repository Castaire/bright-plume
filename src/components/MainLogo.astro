---

import { Image } from "astro:assets";
import wideLogo  from "../assets/logo-wide.png";

interface Props {
    showShadow: boolean;
}

const {showShadow} = Astro.props;

---

<Image src={wideLogo} alt="Restaurant logo"/>

<style>
    img {
        width: 697px;
        height: 133px;
        opacity: 85%;
        margin-bottom: 20px;
        margin-right: 20px;
        border-radius: 12px;
        box-shadow: 20px 20px grey;
    }
</style>

