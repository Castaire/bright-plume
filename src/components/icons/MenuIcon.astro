---

import { Image } from "astro:assets";
import menuIcon from '../../assets/burger.svg';

---

<div class="menuButton" transition:name="icon">
    <a href="/nav">
        <Image src={menuIcon} alt=""/>
    </a>
</div>

<style>
    .menuButton {
        width: auto;
        top: 30px;
        right: 30px;
        border: 2px solid #d6d5d5;
        border-radius: 25%;
        z-index: 2;
    }

    .menuButton:hover {
        cursor: pointer;
        background-color: #bed5ba;
        border-color: #bed5ba;
        filter: drop-shadow(3px -3px 3px rgba(0, 0, 0, 0.5));
    }

    @media(max-width:900px) {
        .menuButton {
            position: fixed;
            top: 30px;
            right: 30px;
            background-color: white;
        }
        img {
            margin: 10px;
            height: 35px;
            width: 35px;
        }
    }
</style>