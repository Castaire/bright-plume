---

import { Image } from 'astro:assets';
import wokImg from "../assets/wok-spread.jpg"

import StandardLayout from '../layouts/StandardLayout.astro';

---

<StandardLayout title="Mr. Lu's Kitchen">
    <Image src={wokImg} alt=""/>
    <div class="splash">
        <h3 class="splash-text">THIS IS</h3>
        <h2 class="splash-text">MR LU'S KITCHEN !</h2>
    </div>
    <p>serving up traditional Szechuan cuisine with a modern twist, from us to you</p>
</StandardLayout>

<style>
    img {
        display: block;
        padding-right: 15px;
        height: 75%;
        opacity: 90%;
    }
    .splash {
        position: relative;
        top: -180px;
        margin-bottom: -180px;
        z-index: 5;
    }
    h3 {
        font-size: 50px;
        letter-spacing: 5px;
    }
    h2 {
        font-size: 60px;
        letter-spacing: 6px;
    }
    p {
        display: block;
        padding: 30px 0px 0px 30px;
        font-family: "Nanum Pen Script", cursive;
        font-size: 23px;
        letter-spacing: 1.25px;
        font-style: normal;
    }
    .splash-text {
        display: block;
        font-family: "Permanent Marker", cursive;
        font-weight: 400;
        text-align: center;
        margin-right: 15px;
        color: #FFFFFF;
        text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    }
</style>