---

import Layout from '../layouts/Layout.astro';
import Details from '../components/Details.astro';

// setup embedded maps
const mapApiKey = import.meta.env.MAPS_API_KEY;
let mapUrl = `https://www.google.com/maps/embed/v1/place?key=${mapApiKey}&q=Eiffel+Tower,Paris+France`
let mapDirUrl = "https://www.google.com/maps/dir//Eiffel+Tower,Paris+France"

---

<Layout title="CONTACT">
    <div class="split-content">
        <div class="map">
            <iframe referrerpolicy="no-referrer-when-downgrade" src={mapUrl} allowfullscreen></iframe>
        </div>
        <div style="details">
            <div class="content">
                <Details
                    company="MR LU'S KITCHEN"
                    street="#101 - 2689 Pandosy Street"
                    area="Kelowna, BC"
                    postalCode="V1Y 9V9"
                    hours="11am - 9pm"
                    phone1="250.763.2988"
                    phone2="250.763.2986"
                    mapDirUrl={mapDirUrl}
                />
            </div>
        </div>
    </div>
</Layout>

<style>
    .split-content {
        display: grid;
        grid-template-columns: 50% 50%;
    }
    .map {
        grid-column-start: 1;
        height: 100vh;
    }
    .map iframe {
        width: 100%;
        height: inherit;
    }
    .details {
        grid-column-start: 2;
        height: 100vh;
    }
    .content {
        position: relative;
        top: 30%;
        margin: auto;
        margin-left: 15%;
        text-align: left;
    }
</style>